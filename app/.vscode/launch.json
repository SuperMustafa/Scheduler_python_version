{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",               // Change 'main' to your filename (without .py)
        "--host", "127.0.0.1",
        "--port", "8080",
        "--reload"               // Optional: removes need to restart server after code changes
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
